$(document).ready(function(){

  // Search
  var searchIcon = $(".search .search-icon")
  var searchInput = $(".search input")

  searchIcon.css("left", searchInput.width() / 4)
  searchIcon.css("top", searchInput.height() / 5)
  $(searchInput).focus(function(){
    searchIcon.css("left", "0")
    searchInput.css({"text-indent":"25px", "text-align":"left", "background-color":"#fff"})
  }).blur(function(){
    searchIcon.css("left", searchInput.width() / 4)
    searchInput.css({"text-indent":"0", "text-align":"center", "background-color":"#f9f9f9"})
    searchInput.val("")
  });

});
