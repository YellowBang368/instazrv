<div class="post">
  <div class="post-header">
    <%= image_tag post_avatar(post.user), class: "user-avatar" %>
    <div class="header-text">
      <h3 class="text-bold">
        <%= link_to "#{post.user.username}", post.user, class: "text-bold no-underline" %>
      </h3>
      <% if post.address.present? %>
        <p class="text-lead"><%= post.address %></p>
      <% end %>
    </div>
  </div>
  <%= image_tag post.images.url, class: "post-image" %>
  <div class="post-footer">
    <div class="actions">
      <%= render partial: 'posts/like', locals: {post: post} %>
      <%= inline_svg 'comment.svg' %>
      <%= inline_svg 'share.svg' %>
      <!-- place for save tag -->
    </div>
    <div class="post-desc">
      <h3 class="text-bold like-counter"><span id="likesCounter" data="<%= post.id %>"><%= post.get_likes.size %></span> likes </h3>
      <%= render partial: "posts/partials/comments", locals: {post: post} %>
    </div>
  </div>
</div>
