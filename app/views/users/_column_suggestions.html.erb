<div class="column-suggestions">
  <% suggested_users.each do |user| %>
    <%= image_tag post_avatar(user), class: "user-avatar" %>
    <div class="center">
      <p class="text-bold">
        <%= link_to "#{user.username}", user, class: "text-bold no-underline" %>
      </p>
      <% if user.fullname.present? %>
      <p class="text-lead">
        <%= user.fullname %>
      </p>
      <% end %>
    </div>
    <div class="aside">
      <%= render partial: "follow", locals: {user: user} %>
    </div>
  <% end %>
</div>
