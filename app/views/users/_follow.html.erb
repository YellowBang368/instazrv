<% if user_signed_in?  %>
  <% unless current_user == user %>
    <% if follows(user) %>
      <%= link_to "Unfollow", relationship_user_path(user), method: "DELETE", remote: true, class: "simple-button unfollow-button follow" %>
    <% else %>
      <%= link_to "Follow", relationship_user_path(user), method: "POST", remote: true, class: "simple-button follow-button follow" %>
    <% end %>
  <% end %>
<% else %>
  <%= link_to "Follow", relationship_user_path(user), method: "POST", remote: true, class: "simple-button follow-button follow" %>
<% end %>
