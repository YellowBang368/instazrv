<div class="feed-container">
  <div class="login-container">
    <%= image_tag "instagram-writing.svg", class: "svg-logo" %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'login-form'}) do |f| %>

      <div class="field">
        <%= f.text_field :username, autofocus: true, autocomplete: "email", placeholder: "Login" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>

      <hr class="hr-text" data-content="OR">
      <div class="footer-links">
        <a href="/" id="facebook">Log in with Facebook</a><br />
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot password?", new_password_path(resource_name), id: "forgotPassword" %><br />
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="login-container no-account">
    <p id="noAccount">
      Don't have an account?
    </p>
    <%= link_to "Sign up", new_user_registration_path %>
  </div>
</div>
